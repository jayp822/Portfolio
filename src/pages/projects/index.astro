---
import { fade } from "astro:transitions";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Projects">
  <div class="mt-[100px] flex flex-col items-center justify-center">
    <article
      transition:animate={fade({ duration: "0.25s" })}
      class="prose prose-base prose-invert mx-auto mt-[50px] w-[90%] overflow-hidden text-balance md:prose-lg lg:prose-xl prose-headings:text-gray-300 prose-h1:text-blue-400 prose-p:font-normal"
    >
      <a
        href="/"
        class="relative bottom-2 text-xl text-white transition duration-200 ease-out hover:underline sm:hover:text-orange-400"
        >Back</a
      >
      <p>In Development...</p>
    </article>
  </div>
</Layout>
