---
import { fade } from "astro:transitions";
import AboutPost from "../content/about/about.mdx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="About">
  <div class="mt-[100px] flex flex-col items-center justify-center">
    <a
      href="/"
      class="prose w-[90%] rounded-3xl text-xl text-white transition duration-200 ease-out hover:underline sm:hover:text-orange-400"
      >Back</a
    >
    <article
      transition:animate={fade({ duration: "0.25s" })}
      class="prose prose-base prose-invert mx-auto mt-[50px] w-[90%] overflow-hidden text-balance md:prose-lg lg:prose-xl prose-headings:text-gray-300 prose-h1:text-blue-400 prose-p:font-normal"
    >
      <AboutPost />
    </article>
  </div>
</Layout>
