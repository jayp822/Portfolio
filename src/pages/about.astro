---
import { fade } from "astro:transitions";
import AboutPost from "../content/about/about.mdx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="About">
  <a
    href="/#all-projects"
    class="relative right-1/3 top-20 mx-auto flex h-[2.5rem] w-[8rem] items-center justify-center rounded-3xl text-xl text-white transition duration-200 ease-out hover:text-orange-400 hover:underline"
    ><button>Back</button></a
  >
  <article
    transition:animate={fade({ duration: "0.25s" })}
    class="prose prose-base prose-invert mx-auto mt-[100px] w-[90%] overflow-hidden text-balance md:prose-lg lg:prose-xl prose-headings:text-gray-300 prose-h1:text-blue-400 prose-p:font-normal"
  >
    <AboutPost />
  </article>
</Layout>
