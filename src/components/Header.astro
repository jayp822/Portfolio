import { Image } from "astro:assets";
import Self from "../assets/self.webp";
---

<header
  class="m-10 mx-auto mt-[150px] flex w-[85%] flex-col items-center justify-center gap-10 sm:flex-row"
>
  <h1
    class="z-40 text-balance text-center text-xl font-bold sm:w-[50%] md:text-4xl"
  >
